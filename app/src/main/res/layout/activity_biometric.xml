<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biometric">

    <TextView


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:textSize="30dp"
        android:text="Thumb Verification"
        android:textColor="@color/black"
        android:fontFamily="@font/tienne_bold"
        android:layout_marginTop="95dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints"></TextView>


    <Button
        android:id="@+id/btnAuth"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:text="AUTHENTICATE NOW"
        android:background="@drawable/button_shape3"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvAuthStatus"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verfication Status "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/tienne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAuth" />

</androidx.constraintlayout.widget.ConstraintLayout>