<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biometric"
    android:background="@drawable/background_app2">

    <TextView

        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/tienne_bold"
        android:gravity="center_horizontal"
        android:text="Thumb Verification"
        android:textColor="@color/green"
        android:textSize="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></TextView>

    <ImageView
        android:layout_width="171dp"
        android:layout_height="236dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:src="@drawable/biometriclogo"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="172dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnAuth"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:background="@drawable/button_shape3"
        android:text="AUTHENTICATE NOW"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.649" />

    <TextView
        android:id="@+id/tvAuthStatus"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verfication Status "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/tienne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAuth" />

</androidx.constraintlayout.widget.ConstraintLayout>