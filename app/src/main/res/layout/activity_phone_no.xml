<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneNo"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_app2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Phone Number"
        android:textColor="@color/green"
        android:fontFamily="@font/tienne_bold"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"></TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/phonelogo"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="115dp"
            android:layout_height="43dp"
            android:layout_marginTop="57dp"
            android:fontFamily="@font/tienne"
            android:textSize="18dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t1"
            app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.332"
            android:layout_marginLeft="16dp" />

        <EditText
            android:id="@+id/t1"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:ems="8"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginTop="57dp"
            android:hint="Enter Mobile No."
            android:fontFamily="@font/tienne"
            android:textSize="18dp"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:layout_marginRight="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ccp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.332"
            android:layout_marginLeft="16dp" />
        <Button
            android:id="@+id/b1"
            android:layout_width="241dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-279dp"
            android:layout_marginTop="08dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/tienne"
            android:text="Get OTP"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>


</LinearLayout>