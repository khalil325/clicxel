<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_app2">


  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="35dp"
      android:text="Welcome to Dashboard"
      android:textColor="@color/green"
      android:fontFamily="@font/tienne_bold"
      android:layout_marginTop="75dp"
      android:gravity="center_horizontal"></TextView>
  <LinearLayout
      android:layout_marginTop="65dp"
      android:layout_width="400dp"
      android:layout_height="199dp"
      android:layout_gravity="center"
      >

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button_roundedcircle"
        android:src="@drawable/camera2"></ImageButton>
      <ImageButton
          android:id="@+id/editbtn"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:layout_gravity="center"
          android:layout_marginLeft="34dp"
          android:layout_marginTop="0dp"
          android:layout_marginBottom="0dp"
          android:background="@drawable/button_roundedcircle"
          android:src="@drawable/edit"></ImageButton>
       </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="108dp"
            android:layout_height="48dp"
            android:text="Camera"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="90dp"
            android:fontFamily="@font/tienne_bold"
            android:gravity="center_horizontal"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView

            android:layout_width="197dp"
            android:layout_height="48dp"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:fontFamily="@font/tienne_bold"

            android:text="Edit Photo"

            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


  Button
      android:id="@+id/loginBtn"
      android:layout_width="200dp"
      android:layout_height="170dp"
      android:background="@drawable/button_roundedcircle"
      android:fontFamily="@font/tienne"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="22dp"
      app:layout_constraintTop_toBottomOf="@+id/loginPassword"
      android:gravity="center_horizontal"
      android:src="@drawable/ed"/>

  </LinearLayout>