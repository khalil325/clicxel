<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".google"
    android:orientation="vertical"
    android:background="@drawable/background_app2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tienne_bold"
            android:includeFontPadding="false"
           android:layout_marginTop="60dp"
            android:shadowColor="#0E0E0E"
            android:text="Sign In"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="45sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/googlelogo" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:includeFontPadding="false"
        android:shadowColor="#0E0E0E"
        android:text="Sign-In with Google using Firebase!"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="16sp" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="90dp"/>




        <com.google.android.gms.common.SignInButton
            android:id="@+id/sbtn"
            android:layout_width="336dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:textAlignment="center">

        </com.google.android.gms.common.SignInButton>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:shadowColor="#0E0E0E"
        android:fontFamily="@font/tienne"
        android:text="All right reserved"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="14sp"
        tools:ignore="RtlCompat" />


</LinearLayout>




</ScrollView>