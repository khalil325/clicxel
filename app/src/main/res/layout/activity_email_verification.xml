<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emailVerification"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:textSize="35dp"
        android:text="Email Verification"
        android:textColor="@color/black"
        android:fontFamily="@font/tienne_bold"
        android:layout_marginTop="95dp"
        android:gravity="center_horizontal"></TextView>

    <TextView
        android:id="@+id/emailtext"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/tienne"
        android:text="You have to verify your E-mail through link, link will be share on your E-mail account."
        android:textColor="@color/darkgreen"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/verifyEmailMsg"
        android:layout_width="286dp"
        android:layout_height="36dp"
        android:layout_marginLeft="00dp"
        android:layout_marginTop="00dp"
        android:layout_marginRight="0dp"
        android:fontFamily="@font/tienne"
        android:gravity="center"
        android:text="**Warning"

        android:textColor="@color/red"
        android:textSize="16dp" />

    <Button
        android:id="@+id/verifyEmailBtn"
    android:layout_width="237dp"
    android:layout_height="50dp"
    android:layout_marginLeft="90dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="105dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_shape3"
    android:fontFamily="@font/tienne"
    android:text="Verify Now"
    android:textColor="@color/white"
    android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/verifyEmailMsg"/>
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_rounded2"
        android:fontFamily="@font/tienne"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword" />


</LinearLayout>